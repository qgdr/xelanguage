fn main() {
    let number = 3;

    if number < 5 {
        println("condition was true");
    } else {
        println("condition was false");
    }

    // condition
    let cond = 1 < number < 5;  // true
    // It is same effect as `1 < number and number < 5`
    cond = 1 < number < 3;  // false


    number = 6;

    if number % 4 == 0 {
        println("number is divisible by 4");
    } else if number % 3 == 0 {
        println("number is divisible by 3");
    } else if number % 2 == 0 {
        println("number is divisible by 2");
    } else {
        println("number is not divisible by 4, 3, or 2");
    }


    cond = true;
    let number = if cond { 5 } else { 6 };          // 5
}


